{
  "name": "@blackglory/observe",
  "version": "0.3.0",
  "description": "A module for observing things happening.",
  "keywords": [
    "DOM"
  ],
  "files": [
    "lib",
    "src"
  ],
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=22"
  },
  "repository": "git@github.com:BlackGlory/observe.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "prepare": "ts-patch install -s",
    "lint": "eslint --quiet src __tests__",
    "test": "vitest --run",
    "prepublishOnly": "run-s prepare clean build",
    "clean": "rimraf lib",
    "build": "tsc --project tsconfig.build.json",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s prepare lint build test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/wait-for": "^0.8.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "husky": "^4.3.6",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "ts-patch": "^3.3.0",
    "tslib": "^2.8.1",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.36.0",
    "typescript-transform-paths": "^3.5.5",
    "vite": "^7.0.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "iterable-operator": "^5.1.0",
    "rxjs": "^7.8.2"
  }
